{
    "app-id" : "com.github.tenderowl.turtle",
    "runtime" : "io.elementary.Platform",
    "runtime-version" : "6",
    "sdk" : "io.elementary.Sdk",
    "command" : "turtle",
    "finish-args" : [
        "--share=network",
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--filesystem=home",
        "--system-talk-name=org.freedesktop.Accounts"
    ],
    "cleanup" : [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules" : [
        {
            "name" : "turtle",
            "builddir" : true,
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://github.com/TenderOwl/Turtle/"
                }
            ]
        }
    ],
    "build-options" : {
        "env" : {        }
    }
}
